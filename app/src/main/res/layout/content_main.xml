<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/withoutknob"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/background_dark"
              android:keepScreenOn="true"
              android:orientation="vertical"
              android:padding="10dip">

    <de.blankedv.sx4control.SpeedBarView
            android:id="@+id/speedbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:background="#ff232323"
            android:longClickable="false"
            android:max="100"
            android:maxHeight="40dp"
            android:minHeight="40dp"
            android:padding="10dp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="20"
                  android:background="@android:color/background_dark"
                  android:orientation="horizontal">

        <ImageView
                android:id="@+id/loco_icon"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="50"
                android:src="@drawable/genloco" />

        <TextView
                android:id="@+id/loco_adr"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:padding="20dp"
                android:text="Adr 211"
                android:textSize="16sp" />

        <Button
                android:id="@+id/loco_stop"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="@string/stop_loco"
                android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="18"
                  android:background="@android:color/background_dark"
                  android:orientation="horizontal">

        <de.blankedv.sx4control.FunctionButton
                android:id="@+id/f0"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="F0"
                android:textSize="22sp" />

        <de.blankedv.sx4control.FunctionButton
                android:id="@+id/f1"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:text="F1"
                android:textSize="22sp" />


    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/bottom"
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="30"
                  android:background="@android:color/background_dark"
                  android:orientation="horizontal">

        <ImageButton
                android:id="@+id/change_dir"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:src="@drawable/right2"
                android:textSize="22sp" />

        <de.blankedv.sx4control.RotaryKnobView
                android:id="@+id/jogView"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="50" />

        <de.blankedv.sx4control.PowerButton
                android:id="@+id/powerBtn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:background="@android:color/background_dark" />
    </LinearLayout>

</LinearLayout>
